{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "default_locale": "en",
  "version": "1.0",
  "description": "__MSG_appDescription__",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["vendor/gif.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["vendor/gif.worker.js"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Image to GIF Converter"
  }
}
